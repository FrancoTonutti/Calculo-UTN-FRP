<WidMain>:
    orientation:'vertical'
    canvas:
        Color:
            rgba: 1,1,1,0
        Rectangle:
            size: self.size
            pos: self.pos

<WidOptions>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: self.color_title_bar
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint: 1,None
    height:125
    padding: [0, 0, 0, 2]

<WidTabNameBar>:
    canvas:
        Color:
            rgb: self.color_title_bar
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint: 1,None
    height: 25
    spacing: 5
    padding: [0, 5, 0, 0]

<WidTabContentBar>:
    canvas:
        Color:
            rgb: self.color_options_bar
        Rectangle:
            size: self.size
            pos: self.pos


<WidLeftPanel>:
    canvas:
