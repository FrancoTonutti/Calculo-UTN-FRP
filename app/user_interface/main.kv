<WidButton>:
    font_name: 'Arial'
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size # choose a value of a which fit the most with your button
            pos: self.pos
    size_hint: 1,1
    size: self.texture_size[0]+30,self.texture_size[1]+10




    Image:
        source: self.parent.image_path

        y: self.parent.pos[1]+self.parent.size[1]/2-+self.texture_size[1]/2
        x: self.parent.pos[0]+self.parent.size[0]/2-+self.texture_size[0]/2

        size: self.texture_size



